<Window x:Class="Employee_Management_System.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee_Management_System.Views"
        xmlns:userControls="clr-namespace:Employee_Management_System.UserControls"
        mc:Ignorable="d"
        Title="Admin Dashboard - Employee Management System" 
        Height="700" Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Dark Theme Color Resources -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#0F172A"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#1E293B"/>
        <SolidColorBrush x:Key="CardBackground" Color="#334155"/>
        <SolidColorBrush x:Key="HoverBackground" Color="#475569"/>

        <SolidColorBrush x:Key="PrimaryText" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#CBD5E1"/>
        <SolidColorBrush x:Key="MutedText" Color="#94A3B8"/>
        <SolidColorBrush x:Key="DisabledText" Color="#64748B"/>

        <SolidColorBrush x:Key="BorderColor" Color="#475569"/>
        <SolidColorBrush x:Key="SubtleBorder" Color="#334155"/>
        <SolidColorBrush x:Key="FocusBorder" Color="#3B82F6"/>

        <SolidColorBrush x:Key="PrimaryButton" Color="#3B82F6"/>
        <SolidColorBrush x:Key="PrimaryButtonHover" Color="#2563EB"/>
        <SolidColorBrush x:Key="SecondaryButton" Color="#64748B"/>
        <SolidColorBrush x:Key="SecondaryButtonHover" Color="#475569"/>
        <SolidColorBrush x:Key="DangerButton" Color="#EF4444"/>
        <SolidColorBrush x:Key="DangerButtonHover" Color="#DC2626"/>
        <SolidColorBrush x:Key="SuccessButton" Color="#10B981"/>
        <SolidColorBrush x:Key="SuccessButtonHover" Color="#059669"/>

        <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentWarning" Color="#F59E0B"/>
        <SolidColorBrush x:Key="AccentSuccess" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentError" Color="#EF4444"/>
        <SolidColorBrush x:Key="AccentInfo" Color="#06B6D4"/>

        <!-- Drop Shadow Effects -->
        <DropShadowEffect x:Key="CardShadow" 
                         ShadowDepth="0" 
                         BlurRadius="16" 
                         Opacity="0.4" 
                         Color="#000000"/>

        <DropShadowEffect x:Key="CardShadowHover" 
                         ShadowDepth="0" 
                         BlurRadius="24" 
                         Opacity="0.6" 
                         Color="#000000"/>

        <!-- Stat Card Style -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="{StaticResource SubtleBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect" Value="{StaticResource CardShadowHover}"/>
                    <Setter Property="Background" Value="{StaticResource HoverBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Navigation Tile Style -->
        <Style x:Key="NavTileStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect" Value="{StaticResource CardShadowHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Text Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        </Style>

        <!-- Stat Number Style -->
        <Style x:Key="StatNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <!-- Stat Label Style -->
        <Style x:Key="StatLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="LineHeight" Value="18"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Margin" Value="8,0,0,16"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="{StaticResource SecondaryBackground}" 
                Padding="32,17"
                Effect="{StaticResource CardShadow}"
                BorderBrush="{StaticResource SubtleBorder}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Admin Dashboard" 
                              Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock x:Name="WelcomeText" 
                              Text="Welcome back, Administrator" 
                              FontSize="15" 
                              Foreground="{StaticResource MutedText}"
                              Margin="0,6,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button 
    x:Name="BackButton"
    Click="BackButton_Click"
    HorizontalAlignment="Left"
    Background="{StaticResource PrimaryButton}"
    Foreground="{StaticResource PrimaryText}"
    Padding="20,10"
    Margin="16,0,16,0"
    BorderThickness="0"
    Cursor="Hand"
    ToolTip="Back to Dashboard"
    FontSize="16"
    FontWeight="SemiBold">

                        <!-- Home Icon -->
                        <Viewbox Width="20" Height="20">
                            <Canvas Width="24" Height="24">
                                <Path 
                Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                Data="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
                            </Canvas>
                        </Viewbox>

                        <!-- Button Style -->
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                                                <ContentPresenter 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="{StaticResource PrimaryButtonHover}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Border Background="{StaticResource CardBackground}"
                            CornerRadius="6"
                            Padding="12,8"
                            Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📅" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="CurrentDateText" 
                                      Text="Monday, October 27, 2025" 
                                      FontSize="14" 
                                      Foreground="{StaticResource SecondaryText}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Button Content="Logout" 
                            x:Name="LogoutButton"
                            Click="LogoutButton_Click"
                            Background="{StaticResource DangerButton}"
                            Foreground="{StaticResource PrimaryText}"
                            Padding="20,10"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontWeight="SemiBold"
                            FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                   Background="{TemplateBinding Background}"
                                                   CornerRadius="6"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{StaticResource DangerButtonHover}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Section -->
        <Border Grid.Row="1" Padding="24,24,24,16">
            <StackPanel>
                <TextBlock Text="Overview Statistics" 
                          Style="{StaticResource SectionHeaderStyle}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Active Employees -->
                    <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="👥" 
                                      FontSize="40" 
                                      HorizontalAlignment="Center" 
                                      Margin="0,0,0,12"/>
                            <TextBlock x:Name="TotalEmployeesText" 
                                      Text="0" 
                                      Style="{StaticResource StatNumberStyle}"
                                      Foreground="{StaticResource AccentBlue}"/>
                            <TextBlock Text="Total Active Employees" 
                                      Style="{StaticResource StatLabelStyle}"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Employees Present Today -->
                    <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="✓" 
                                      FontSize="40" 
                                      HorizontalAlignment="Center" 
                                      Margin="0,0,0,12"
                                      Foreground="{StaticResource AccentSuccess}"/>
                            <TextBlock x:Name="PresentTodayText" 
                                      Text="0" 
                                      Style="{StaticResource StatNumberStyle}"
                                      Foreground="{StaticResource AccentSuccess}"/>
                            <TextBlock Text="Present Today" 
                                      Style="{StaticResource StatLabelStyle}"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Pending Leave Requests -->
                    <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="⏳" 
                                      FontSize="40" 
                                      HorizontalAlignment="Center" 
                                      Margin="0,0,0,12"/>
                            <TextBlock x:Name="PendingLeavesText" 
                                      Text="0" 
                                      Style="{StaticResource StatNumberStyle}"
                                      Foreground="{StaticResource AccentWarning}"/>
                            <TextBlock Text="Pending Leave Requests" 
                                      Style="{StaticResource StatLabelStyle}"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Approved Leaves This Month -->
                    <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                        <StackPanel>
                            <TextBlock Text="📋" 
                                      FontSize="40" 
                                      HorizontalAlignment="Center" 
                                      Margin="0,0,0,12"/>
                            <TextBlock x:Name="ApprovedLeavesText" 
                                      Text="0" 
                                      Style="{StaticResource StatNumberStyle}"
                                      Foreground="{StaticResource AccentInfo}"/>
                            <TextBlock Text="Approved Leaves This Month" 
                                      Style="{StaticResource StatLabelStyle}"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Navigation Tiles Section -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="24,8,24,24">
            <StackPanel>
                <TextBlock Text="Quick Access" 
                          Style="{StaticResource SectionHeaderStyle}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Employee Management Tile -->
                    <Button Grid.Column="0" Grid.Row="0"
                            Style="{StaticResource NavTileStyle}"
                            x:Name="EmployeeManagementButton"
                            Click="EmployeeManagementButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#3B82F6" Offset="0"/>
                                <GradientStop Color="#2563EB" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel>
                            <TextBlock Text="👥" 
                                      FontSize="56" 
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,12"/>
                            <TextBlock Text="Employee Management" 
                                      FontSize="17" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource PrimaryText}"
                                      HorizontalAlignment="Center"
                                      TextWrapping="Wrap"
                                      TextAlignment="Center"
                                      LineHeight="22"/>
                            <TextBlock Text="Add, Edit, Delete Employees" 
                                      FontSize="12" 
                                      Foreground="{StaticResource SecondaryText}"
                                      HorizontalAlignment="Center"
                                      Margin="0,6,0,0"
                                      TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Attendance Tracking Tile -->
                    <Button Grid.Column="1" Grid.Row="0"
                            Style="{StaticResource NavTileStyle}"
                            x:Name="AttendanceTrackingButton"
                            Click="AttendanceTrackingButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#10B981" Offset="0"/>
                                <GradientStop Color="#059669" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel>
                            <TextBlock Text="📊" 
                                      FontSize="56" 
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,12"/>
                            <TextBlock Text="Attendance Tracking" 
                                      FontSize="17" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource PrimaryText}"
                                      HorizontalAlignment="Center"
                                      TextWrapping="Wrap"
                                      TextAlignment="Center"
                                      LineHeight="22"/>
                            <TextBlock Text="Mark &amp; View Attendance" 
                                      FontSize="12" 
                                      Foreground="{StaticResource SecondaryText}"
                                      HorizontalAlignment="Center"
                                      Margin="0,6,0,0"
                                      TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Leave Requests Tile -->
                    <Button Grid.Column="2" Grid.Row="0"
                            Style="{StaticResource NavTileStyle}"
                            x:Name="LeaveRequestsButton"
                            Click="LeaveRequestsButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F59E0B" Offset="0"/>
                                <GradientStop Color="#D97706" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel>
                            <TextBlock Text="📝" 
                                      FontSize="56" 
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,12"/>
                            <TextBlock Text="Leave Management" 
                                      FontSize="17" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource PrimaryText}"
                                      HorizontalAlignment="Center"
                                      TextWrapping="Wrap"
                                      TextAlignment="Center"
                                      LineHeight="22"/>
                            <TextBlock Text="Approve/Reject Leave Requests" 
                                      FontSize="12" 
                                      Foreground="{StaticResource SecondaryText}"
                                      HorizontalAlignment="Center"
                                      Margin="0,6,0,0"
                                      TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Reports Tile -->
                    <Button Grid.Column="0" Grid.Row="1"
                            Style="{StaticResource NavTileStyle}"
                            x:Name="ReportsButton"
                            Click="ReportsButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#8B5CF6" Offset="0"/>
                                <GradientStop Color="#7C3AED" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel>
                            <TextBlock Text="📈" 
                                      FontSize="56" 
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,12"/>
                            <TextBlock Text="Reports" 
                                      FontSize="17" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource PrimaryText}"
                                      HorizontalAlignment="Center"
                                      TextWrapping="Wrap"
                                      TextAlignment="Center"
                                      LineHeight="22"/>
                            <TextBlock Text="Generate &amp; Export Reports" 
                                      FontSize="12" 
                                      Foreground="{StaticResource SecondaryText}"
                                      HorizontalAlignment="Center"
                                      Margin="0,6,0,0"
                                      TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Refresh Button -->
                    <Button Grid.Column="1" Grid.Row="1"
                            Style="{StaticResource NavTileStyle}"
                            x:Name="RefreshButton"
                            Click="RefreshButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#06B6D4" Offset="0"/>
                                <GradientStop Color="#0891B2" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel>
                            <TextBlock Text="🔄" 
                                      FontSize="56" 
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,12"/>
                            <TextBlock Text="Refresh Dashboard" 
                                      FontSize="17" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource PrimaryText}"
                                      HorizontalAlignment="Center"
                                      TextWrapping="Wrap"
                                      TextAlignment="Center"
                                      LineHeight="22"/>
                            <TextBlock Text="Update Statistics" 
                                      FontSize="12" 
                                      Foreground="{StaticResource SecondaryText}"
                                      HorizontalAlignment="Center"
                                      Margin="0,6,0,0"
                                      TextAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Settings/Profile Tile -->
                    <Button Grid.Column="2" Grid.Row="1"
                            Style="{StaticResource NavTileStyle}"
                            x:Name="SettingsButton"
                            Click="SettingsButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#64748B" Offset="0"/>
                                <GradientStop Color="#475569" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <StackPanel>
                            <TextBlock Text="⚙️" 
                                      FontSize="56" 
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,12"/>
                            <TextBlock Text="Settings" 
                                      FontSize="17" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource PrimaryText}"
                                      HorizontalAlignment="Center"
                                      TextWrapping="Wrap"
                                      TextAlignment="Center"
                                      LineHeight="22"/>
                            <TextBlock Text="System Configuration" 
                                      FontSize="12" 
                                      Foreground="{StaticResource SecondaryText}"
                                      HorizontalAlignment="Center"
                                      Margin="0,6,0,0"
                                      TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Content Area (Initially Hidden) -->
        <Border x:Name="ContentArea" 
                Grid.Row="1" 
                Grid.RowSpan="2" 
                Background="{StaticResource PrimaryBackground}"
                Visibility="Collapsed"
                Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Back Button -->

                <!-- Dynamic Content -->
                <ContentControl x:Name="DynamicContent" Grid.Row="1"/>
            </Grid>
        </Border>
    </Grid>
</Window>