<Window x:Class="Employee_Management_System.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee_Management_System.Views"
        xmlns:viewmodels="clr-namespace:Employee_Management_System.ViewModels"
        xmlns:conv="clr-namespace:Employee_Management_System.Converters"
        mc:Ignorable="d"
        Title="Employee Management System - Login"
        Height="700"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0F172A">

    <Window.Resources>
        <!-- Dark Theme Color Resources -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#0F172A"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#1E293B"/>
        <SolidColorBrush x:Key="CardBackground" Color="#334155"/>
        <SolidColorBrush x:Key="InputBackground" Color="#1E293B"/>
        <SolidColorBrush x:Key="HoverBackground" Color="#475569"/>

        <SolidColorBrush x:Key="PrimaryText" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#CBD5E1"/>
        <SolidColorBrush x:Key="MutedText" Color="#94A3B8"/>
        <SolidColorBrush x:Key="DisabledText" Color="#64748B"/>

        <SolidColorBrush x:Key="BorderColor" Color="#475569"/>
        <SolidColorBrush x:Key="FocusBorder" Color="#3B82F6"/>

        <SolidColorBrush x:Key="PrimaryButton" Color="#3B82F6"/>
        <SolidColorBrush x:Key="PrimaryButtonHover" Color="#2563EB"/>
        <SolidColorBrush x:Key="DisabledButton" Color="#64748B"/>

        <SolidColorBrush x:Key="AccentError" Color="#EF4444"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6"/>

        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryButton}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DisabledButton}"/>
                                <Setter Property="Cursor" Value="Wait"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style (Reduced Padding) -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6,4"/>
            <!-- 👈 Reduced padding -->
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource FocusBorder}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource FocusBorder}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox Style (Reduced Padding) -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6,4"/>
            <!-- 👈 Reduced padding -->
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource FocusBorder}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource FocusBorder}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="CheckBoxBorder"
                                    Width="18"
                                    Height="18"
                                    Background="{StaticResource InputBackground}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Margin="0,0,8,0">
                                <TextBlock x:Name="CheckMark"
                                           Text="✓"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryButton}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="{StaticResource PrimaryButton}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="{StaticResource FocusBorder}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Converter for Visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <conv:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Window.Resources>

    <Grid>
        <Border Background="{StaticResource CardBackground}" 
                CornerRadius="8" 
                Margin="40" 
                Padding="32,28">
            <Border.Effect>
                <DropShadowEffect BlurRadius="24" 
                                  ShadowDepth="0" 
                                  Opacity="0.6" 
                                  Color="#000000"/>
            </Border.Effect>

            <StackPanel>
                <!-- Logo/Header -->
                <Border Background="{StaticResource SecondaryBackground}"
                        CornerRadius="50"
                        Width="70"
                        Height="70"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,16">
                    <TextBlock Text="🏢" 
                               FontSize="36" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="Employee Management System" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Foreground="{StaticResource PrimaryText}"
                           Margin="0,0,0,6"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           LineHeight="26"/>

                <TextBlock Text="Sign in to continue" 
                           FontSize="13" 
                           HorizontalAlignment="Center" 
                           Foreground="{StaticResource MutedText}"
                           Margin="0,0,0,24"/>

                <!-- Username -->
                <TextBlock Text="Username" 
                           FontSize="15" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource SecondaryText}"
                           Margin="0,0,0,6"/>

                <TextBox x:Name="txtUsername" 
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,16"
                         TabIndex="0" FontSize="20"/>

                <!-- Password -->
                <TextBlock Text="Password" 
                           FontSize="15" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource SecondaryText}"
                           Margin="0,0,0,6"/>
                <PasswordBox x:Name="txtPassword" 
                             Style="{StaticResource ModernPasswordBox}"
                             Margin="0,0,0,16"
                             TabIndex="1" FontSize="20"
                             PasswordChanged="TxtPassword_PasswordChanged"/>

                <!-- Remember Me -->
                <CheckBox Content="Remember Me" 
                          IsChecked="{Binding RememberMe}"
                          Style="{StaticResource ModernCheckBox}"
                          Margin="0,0,0,16"/>

                <!-- Error Message -->
                <Border Background="#7F1D1D"
                        BorderBrush="{StaticResource AccentError}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="10,8"
                        Margin="0,0,0,16"
                        Visibility="{Binding IsErrorVisible, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠️" 
                                   FontSize="13"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="{StaticResource AccentError}" 
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Login Button -->
                <Button Content="{Binding LoginButtonContent}" 
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource ModernButton}"
                        IsEnabled="{Binding IsLoggingIn, Converter={StaticResource InverseBoolConverter}}"
                        TabIndex="2"
                        Margin="0,0,0,16"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
