<Window
    x:Class="Employee_Management_System.Views.EmployeeProfile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Employee Dashboard - EMS"
    Width="1200"
    Height="750"
    Background="#F9FAFB"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Card Style  -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="20"
                        Opacity="0.08"
                        ShadowDepth="0"
                        Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Dashboard Button Style  -->
        <Style x:Key="DashboardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Height" Value="140" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect
                                    BlurRadius="20"
                                    Opacity="0.08"
                                    ShadowDepth="0"
                                    Color="#000000" />
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6" />
                                <Setter Property="BorderBrush" Value="#14B8A6" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E5E7EB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Stat Card Style  -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="Height" Value="140" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="20"
                        Opacity="0.08"
                        ShadowDepth="0"
                        Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>

        <!--  DataGrid Header Style  -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB" />
            <Setter Property="Foreground" Value="#111827" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="BorderBrush" Value="#E5E7EB" />
            <Setter Property="BorderThickness" Value="0,0,0,2" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>

        <!--  DataGrid Cell Style  -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="Foreground" Value="#111827" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border
                            Padding="16,8"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#F0FDFA" />
                    <Setter Property="Foreground" Value="#111827" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  DataGrid Row Style  -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#F3F4F6" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F9FAFB" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#F0FDFA" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  ScrollBar Style  -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#F9FAFB" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="10" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ScrollBar">
                                <Grid>
                                    <Border Background="#F9FAFB" CornerRadius="5" />
                                    <Track x:Name="PART_Track" IsDirectionReversed="True">
                                        <Track.Thumb>
                                            <Thumb>
                                                <Thumb.Style>
                                                    <Style TargetType="Thumb">
                                                        <Setter Property="Background" Value="#D1D5DB" />
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Thumb">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="5" />
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#9CA3AF" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Thumb.Style>
                                            </Thumb>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <!--  Header  -->
        <Border
            Grid.Row="0"
            Background="#FFFFFF"
            BorderBrush="#E5E7EB"
            BorderThickness="0,0,0,1">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Opacity="0.06"
                    ShadowDepth="0"
                    Color="#000000" />
            </Border.Effect>
            <Grid Margin="32,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Logo and Title  -->
                <StackPanel
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Border
                        Margin="0,0,20,0"
                        Padding="8"
                        Background="#14B8A6"
                        CornerRadius="10">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="28"
                            Text="👤" />
                    </Border>
                    <StackPanel>
                        <TextBlock
                            FontSize="24"
                            FontWeight="SemiBold"
                            Foreground="#111827"
                            Text="Employee Dashboard" />
                        <TextBlock
                            x:Name="WelcomeText"
                            Margin="0,4,0,0"
                            FontSize="13"
                            Foreground="#6B7280"
                            Text="Welcome back!" />
                    </StackPanel>
                </StackPanel>

                <!--  Right Side: Date, Home Button, Logout Button  -->
                <StackPanel
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <!--  Current Date  -->
                    <Border
                        Margin="0,0,15,0"
                        Padding="16,8"
                        Background="#F9FAFB"
                        CornerRadius="8">
                        <TextBlock
                            x:Name="CurrentDateText"
                            FontSize="14"
                            FontWeight="Medium"
                            Foreground="#111827"
                            Text="Monday, January 01, 2025" />
                    </Border>

                    <!--  Home Button (Icon)  -->
                    <Button
                        x:Name="BackButton"
                        Width="50"
                        Height="40"
                        Margin="0,0,10,0"
                        Background="#14B8A6"
                        BorderThickness="0"
                        Click="BackButton_Click"
                        Cursor="Hand">
                        <TextBlock
                            FontSize="20"
                            Foreground="White"
                            Text="🏠" />
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Padding="{TemplateBinding Padding}"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0D9488" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!--  Logout Button  -->
                    <Button
                        x:Name="LogoutButton"
                        Width="70"
                        Height="40"
                        Padding="4,2"
                        Background="#EF4444"
                        BorderThickness="0"
                        Click="LogoutButton_Click"
                        Content="Logout"
                        Cursor="Hand"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Padding="{TemplateBinding Padding}"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#DC2626" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <!--  Main Content Area  -->
        <ScrollViewer
            Grid.Row="1"
            Padding="4"
            VerticalScrollBarVisibility="Auto">
            <Grid x:Name="MainContentGrid" Margin="20,12,20,0">
                <!--  Dashboard View  -->
                <StackPanel x:Name="DashboardPanel">

                    <Grid Margin="0,0,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Quick Stats Section  -->
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,6,0">
                            <TextBlock
                                Margin="8,0,8,0"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="#111827"
                                Text="Quick Stats" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Today's Status  -->
                                <Border
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource StatCardStyle}">
                                    <StackPanel>
                                        <Border
                                            Margin="0,0,0,6"
                                            Padding="8"
                                            HorizontalAlignment="Center"
                                            Background="#F0FDFA"
                                            CornerRadius="8">
                                            <TextBlock FontSize="24" Text="📅" />
                                        </Border>
                                        <TextBlock
                                            Margin="0,0,0,4"
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="Medium"
                                            Foreground="#6B7280"
                                            Text="Today's Status" />
                                        <TextBlock
                                            x:Name="TodayStatusText"
                                            HorizontalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Foreground="#14B8A6"
                                            Text="Not Checked In"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>

                                <!--  Total Leaves  -->
                                <Border
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource StatCardStyle}">
                                    <StackPanel>
                                        <Border
                                            Margin="0,0,0,6"
                                            Padding="8"
                                            HorizontalAlignment="Center"
                                            Background="#EFF6FF"
                                            CornerRadius="8">
                                            <TextBlock FontSize="24" Text="🏖️" />
                                        </Border>
                                        <TextBlock
                                            Margin="0,0,0,4"
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="Medium"
                                            Foreground="#6B7280"
                                            Text="Total Leave Requests" />
                                        <TextBlock
                                            x:Name="TotalLeavesText"
                                            HorizontalAlignment="Center"
                                            FontSize="24"
                                            FontWeight="Bold"
                                            Foreground="#3B82F6"
                                            Text="0" />
                                    </StackPanel>
                                </Border>

                                <!--  Pending Leaves  -->
                                <Border
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Style="{StaticResource StatCardStyle}">
                                    <StackPanel>
                                        <Border
                                            Margin="0,0,0,6"
                                            Padding="8"
                                            HorizontalAlignment="Center"
                                            Background="#FEF3C7"
                                            CornerRadius="8">
                                            <TextBlock FontSize="24" Text="⏳" />
                                        </Border>
                                        <TextBlock
                                            Margin="0,0,0,4"
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="Medium"
                                            Foreground="#6B7280"
                                            Text="Pending Leaves" />
                                        <TextBlock
                                            x:Name="PendingLeavesText"
                                            HorizontalAlignment="Center"
                                            FontSize="24"
                                            FontWeight="Bold"
                                            Foreground="#F59E0B"
                                            Text="0" />
                                    </StackPanel>
                                </Border>

                                <!--  Leave Balance  -->
                                <Border
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Style="{StaticResource StatCardStyle}">
                                    <StackPanel>
                                        <Border
                                            Margin="0,0,0,6"
                                            Padding="8"
                                            HorizontalAlignment="Center"
                                            Background="#DCFCE7"
                                            CornerRadius="8">
                                            <TextBlock FontSize="24" Text="✅" />
                                        </Border>
                                        <TextBlock
                                            Margin="0,0,0,4"
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="Medium"
                                            Foreground="#6B7280"
                                            Text="Annual Leave Balance" />
                                        <TextBlock
                                            x:Name="LeaveBalanceText"
                                            HorizontalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="#10B981"
                                            Text="0 days" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>

                        <!--  Quick Actions Section  -->
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="6,0,0,0">
                            <TextBlock
                                Margin="8,0,8,0"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="#111827"
                                Text="Quick Actions" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Mark Attendance  -->
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Click="MarkAttendanceButton_Click"
                                    Style="{StaticResource DashboardButtonStyle}">
                                    <StackPanel>
                                        <Border
                                            Width="50"
                                            Height="50"
                                            Margin="0,0,0,8"
                                            Background="#F0FDFA"
                                            CornerRadius="50">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="28"
                                                FontWeight="Bold"
                                                Foreground="#14B8A6"
                                                Text="✓" />
                                        </Border>
                                        <TextBlock
                                            Margin="0,0,0,4"
                                            HorizontalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#111827"
                                            Text="Mark Attendance" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="11"
                                            Foreground="#6B7280"
                                            Text="Check In / Check Out" />
                                    </StackPanel>
                                </Button>

                                <!--  View Attendance  -->
                                <Button
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Click="ViewAttendanceButton_Click"
                                    Style="{StaticResource DashboardButtonStyle}">
                                    <StackPanel>
                                        <Border
                                            Width="50"
                                            Height="50"
                                            Margin="0,0,0,8"
                                            Background="#F9FAFB"
                                            CornerRadius="50">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="28"
                                                Text="📊" />
                                        </Border>
                                        <TextBlock
                                            Margin="0,0,0,4"
                                            HorizontalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#111827"
                                            Text="My Attendance" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="11"
                                            Foreground="#6B7280"
                                            Text="View attendance records" />
                                    </StackPanel>
                                </Button>

                                <!--  Apply Leave  -->
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Click="ApplyLeaveButton_Click"
                                    Style="{StaticResource DashboardButtonStyle}">
                                    <StackPanel>
                                        <Border
                                            Width="50"
                                            Height="50"
                                            Margin="0,0,0,8"
                                            Background="#F9FAFB"
                                            CornerRadius="50">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="28"
                                                Text="📝" />
                                        </Border>
                                        <TextBlock
                                            Margin="0,0,0,4"
                                            HorizontalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#111827"
                                            Text="Apply Leave" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="11"
                                            Foreground="#6B7280"
                                            Text="Request new leave" />
                                    </StackPanel>
                                </Button>

                                <!--  My Leaves  -->
                                <Button
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Click="MyLeavesButton_Click"
                                    Style="{StaticResource DashboardButtonStyle}">
                                    <StackPanel>
                                        <Border
                                            Width="50"
                                            Height="50"
                                            Margin="0,0,0,8"
                                            Background="#F9FAFB"
                                            CornerRadius="50">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="28"
                                                Text="📋" />
                                        </Border>
                                        <TextBlock
                                            Margin="0,0,0,4"
                                            HorizontalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="#111827"
                                            Text="My Leaves" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="11"
                                            Foreground="#6B7280"
                                            Text="View leave history" />
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <!--  Recent Activity  -->
                    <TextBlock
                        Margin="8,8,0,5"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="#111827"
                        Text="Recent Activity" />

                    <Border MinHeight="267" Style="{StaticResource CardStyle}">
                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <DataGrid
                                x:Name="RecentActivityGrid"
                                AutoGenerateColumns="False"
                                Background="#FFFFFF"
                                BorderThickness="0"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                CellStyle="{StaticResource DataGridCellStyle}"
                                ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                FontSize="14"
                                GridLinesVisibility="None"
                                HeadersVisibility="Column"
                                IsReadOnly="True"
                                RowHeight="48"
                                RowStyle="{StaticResource DataGridRowStyle}"
                                SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding AttendanceDate, StringFormat='{}{0:MMM dd, yyyy}'}"
                                        Header="Date">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#111827" />
                                                <Setter Property="FontWeight" Value="Medium" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding CheckInDisplay}"
                                        Header="Check In">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#111827" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding CheckOutDisplay}"
                                        Header="Check Out">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#111827" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding TotalHours, StringFormat='{}{0:F2} hrs'}"
                                        Header="Hours">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#14B8A6" />
                                                <Setter Property="FontWeight" Value="SemiBold" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding Status}"
                                        Header="Status">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#10B981" />
                                                <Setter Property="FontWeight" Value="Medium" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                    </Border>
                </StackPanel>

                <!--  Dynamic Content Area (Hidden by default)  -->
                <Border
                    x:Name="ContentArea"
                    Style="{StaticResource CardStyle}"
                    Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  Back Button  -->


                        <!--  Dynamic Content  -->
                        <ContentControl x:Name="DynamicContent" Grid.Row="1" />
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>