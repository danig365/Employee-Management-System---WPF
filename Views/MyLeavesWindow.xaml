<Window x:Class="Employee_Management_System.Views.MyLeavesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Employee_Management_System.ViewModels"
        Title="My Leave Requests" Height="600" Width="900" 
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="My Leave Requests" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <Button Grid.Row="1" Content="Apply for New Leave" Width="150" Height="35" Command="{Binding ApplyLeaveCommand}" 
                Background="#28A745" Foreground="White" BorderThickness="0" HorizontalAlignment="Left" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Status Filter:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Width="120" ItemsSource="{Binding StatusFilters}" SelectedItem="{Binding SelectedStatusFilter}" 
                      SelectionChanged="ComboBox_SelectionChanged"/>
        </StackPanel>

        <Border Grid.Row="3" BorderBrush="#DEE2E6" BorderThickness="1" Padding="15" Margin="0,0,0,15" Background="#E7F3FF">
            <StackPanel>
                <TextBlock Text="Leave Balance:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,20,0">
                        <Run Text="Annual: " FontWeight="Bold"/>
                        <Run Text="{Binding AnnualLeaveBalance, Mode=OneWay}"/>
                        <Run Text=" days"/>
                    </TextBlock>
                    <TextBlock Margin="0,0,20,0">
                        <Run Text="Sick: " FontWeight="Bold"/>
                        <Run Text="{Binding SickLeaveBalance, Mode=OneWay}"/>
                        <Run Text=" days"/>
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Casual: " FontWeight="Bold"/>
                        <Run Text="{Binding CasualLeaveBalance, Mode=OneWay}"/>
                        <Run Text=" days"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="4" ItemsSource="{Binding LeaveRequests}" SelectedItem="{Binding SelectedLeaveRequest}"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"
                  GridLinesVisibility="Horizontal" AlternatingRowBackground="#F8F9FA">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding LeaveType}" Width="120"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                <DataGridTextColumn Header="Days" Binding="{Binding Duration}" Width="60"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="Pending">
                                    <Setter Property="Foreground" Value="#FFC107"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                                <Trigger Property="Text" Value="Approved">
                                    <Setter Property="Foreground" Value="#28A745"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                                <Trigger Property="Text" Value="Rejected">
                                    <Setter Property="Foreground" Value="#DC3545"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Applied On" Binding="{Binding RequestDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                <DataGridTextColumn Header="Remarks" Binding="{Binding Remarks}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="5" BorderBrush="#DEE2E6" BorderThickness="1" Padding="15" Margin="0,15,0,0" Background="#F8F9FA">
            <StackPanel>
                <TextBlock Text="Selected Leave Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock>
                            <Run Text="Type: " FontWeight="Bold"/>
                            <Run Text="{Binding SelectedLeaveRequest.LeaveType, Mode=OneWay, FallbackValue='N/A'}"/>
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0">
                            <Run Text="Duration: " FontWeight="Bold"/>
                            <Run Text="{Binding SelectedLeaveRequest.StartDate, Mode=OneWay, StringFormat=dd/MM/yyyy, FallbackValue='N/A'}"/>
                            <Run Text=" to "/>
                            <Run Text="{Binding SelectedLeaveRequest.EndDate, Mode=OneWay, StringFormat=dd/MM/yyyy, FallbackValue='N/A'}"/>
                            <Run Text=" ("/>
                            <Run Text="{Binding SelectedLeaveRequest.Duration, Mode=OneWay, FallbackValue='0'}"/>
                            <Run Text=" days)"/>
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0">
                            <Run Text="Status: " FontWeight="Bold"/>
                            <Run Text="{Binding SelectedLeaveRequest.Status, Mode=OneWay, FallbackValue='N/A'}"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock>
                            <Run Text="Your Remarks: " FontWeight="Bold"/>
                            <Run Text="{Binding SelectedLeaveRequest.Remarks, Mode=OneWay, FallbackValue='N/A'}"/>
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0">
                            <Run Text="Applied On: " FontWeight="Bold"/>
                            <Run Text="{Binding SelectedLeaveRequest.RequestDate, Mode=OneWay, StringFormat=dd/MM/yyyy, FallbackValue='N/A'}"/>
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0">
                            <Run Text="Admin Remarks: " FontWeight="Bold"/>
                            <Run Text="{Binding SelectedLeaveRequest.AdminRemarks, Mode=OneWay, FallbackValue='N/A'}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>