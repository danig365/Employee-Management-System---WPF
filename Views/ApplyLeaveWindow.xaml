<Window x:Class="Employee_Management_System.Views.ApplyLeaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Employee_Management_System.ViewModels"
        Title="Apply for Leave" Height="500" Width="450" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Apply for Leave" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Employee:" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Employees}" DisplayMemberPath="FullName" SelectedValuePath="EmployeeId" 
                      SelectedValue="{Binding SelectedEmployeeId}" IsEnabled="{Binding IsAdmin}" Margin="0,0,0,15"/>

            <TextBlock Text="Leave Type:" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding LeaveTypes}" SelectedItem="{Binding SelectedLeaveType}" Margin="0,0,0,15"/>

            <TextBlock Text="Start Date:" Margin="0,0,0,5"/>
            <DatePicker SelectedDate="{Binding StartDate}" Margin="0,0,0,15"/>

            <TextBlock Text="End Date:" Margin="0,0,0,5"/>
            <DatePicker SelectedDate="{Binding EndDate}" Margin="0,0,0,15"/>

            <TextBlock Margin="0,0,0,15">
                <Run Text="Duration: " FontWeight="Bold"/>
                <Run Text="{Binding Duration, Mode=OneWay}"/>
                <Run Text=" days"/>
            </TextBlock>

            <TextBlock Text="Reason/Remarks:" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Remarks, UpdateSourceTrigger=PropertyChanged}" Height="80" TextWrapping="Wrap" 
                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,15"/>

            <TextBlock Margin="0,0,0,15">
                <Run Text="Leave Balance (" FontWeight="Bold"/>
                <Run Text="{Binding SelectedLeaveType, Mode=OneWay}"/>
                <Run Text="): " FontWeight="Bold"/>
                <Run Text="{Binding LeaveBalance, Mode=OneWay}"/>
                <Run Text=" days"/>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Submit Request" Width="120" Height="35" Command="{Binding SubmitCommand}" 
                    Background="#28A745" Foreground="White" BorderThickness="0" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="100" Height="35" Command="{Binding CancelCommand}" 
                    Background="#6C757D" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>