<Window x:Class="Employee_Management_System.UserControls.AddEditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee_Management_System.UserControls"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="650" 
        Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0F172A">

    <Window.Resources>
        <!-- Dark Theme Color Resources -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#0F172A"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#1E293B"/>
        <SolidColorBrush x:Key="CardBackground" Color="#334155"/>
        <SolidColorBrush x:Key="InputBackground" Color="#1E293B"/>
        <SolidColorBrush x:Key="HoverBackground" Color="#475569"/>

        <SolidColorBrush x:Key="PrimaryText" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="SecondaryText" Color="#CBD5E1"/>
        <SolidColorBrush x:Key="MutedText" Color="#94A3B8"/>
        <SolidColorBrush x:Key="DisabledText" Color="#64748B"/>

        <SolidColorBrush x:Key="BorderColor" Color="#475569"/>
        <SolidColorBrush x:Key="SubtleBorder" Color="#334155"/>
        <SolidColorBrush x:Key="FocusBorder" Color="#3B82F6"/>

        <SolidColorBrush x:Key="PrimaryButton" Color="#3B82F6"/>
        <SolidColorBrush x:Key="PrimaryButtonHover" Color="#2563EB"/>
        <SolidColorBrush x:Key="SecondaryButton" Color="#64748B"/>
        <SolidColorBrush x:Key="SecondaryButtonHover" Color="#475569"/>
        <SolidColorBrush x:Key="DisabledButton" Color="#64748B"/>

        <SolidColorBrush x:Key="AccentError" Color="#EF4444"/>
        <SolidColorBrush x:Key="AccentSuccess" Color="#10B981"/>

        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryButton}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryButtonHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DisabledButton}"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SecondaryButton}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SecondaryButtonHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="CaretBrush" Value="{StaticResource PrimaryText}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource FocusBorder}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource FocusBorder}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="toggleButton"
                                        Grid.Column="2"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press"
                                        Background="{StaticResource InputBackground}"
                                        BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="1">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="20"/>
                                                            </Grid.ColumnDefinitions>
                                                            <ContentPresenter Grid.Column="0" 
                                                                            Content="{Binding Path=SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                            Margin="12,10"/>
                                                            <Path Grid.Column="1"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  Data="M 0 0 L 4 4 L 8 0 Z"
                                                                  Fill="{StaticResource SecondaryText}"/>
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource FocusBorder}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="{StaticResource CardBackground}"
                                        BorderBrush="{StaticResource BorderColor}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Margin="0,4,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.5" Color="#000000"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBackground}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        </Style>

        <!-- RadioButton Style -->
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="RadioBorder"
                                    Width="18"
                                    Height="18"
                                    Background="{StaticResource InputBackground}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    CornerRadius="9"
                                    Margin="0,0,8,0">
                                <Ellipse x:Name="RadioDot"
                                        Width="10"
                                        Height="10"
                                        Fill="{StaticResource PrimaryButton}"
                                        Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="RadioDot" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="RadioBorder" Property="BorderBrush" Value="{StaticResource PrimaryButton}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RadioBorder" Property="BorderBrush" Value="{StaticResource FocusBorder}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryText}"/>
        </Style>

        <!-- Required Label Style -->
        <Style x:Key="RequiredLabel" TargetType="TextBlock" BasedOn="{StaticResource FormLabel}">
            <Setter Property="Text" Value="*"/>
            <Setter Property="Foreground" Value="{StaticResource AccentError}"/>
            <Setter Property="Margin" Value="3,0,0,6"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource SecondaryBackground}" 
                Padding="24,16"
                BorderBrush="{StaticResource SubtleBorder}"
                BorderThickness="0,0,0,1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
            </Border.Effect>
            <TextBlock Text="{Binding WindowTitle}" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryText}"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="{StaticResource CardBackground}" 
                    Margin="20" 
                    Padding="28" 
                    CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.4" Color="#000000"/>
                </Border.Effect>
                <StackPanel>
                    <!-- First Name -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="First Name" Style="{StaticResource FormLabel}"/>
                            <TextBlock Style="{StaticResource RequiredLabel}"/>
                        </StackPanel>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBox}"/>
                        <TextBlock Text="{Binding FirstNameError}" 
                                   Foreground="{StaticResource AccentError}" 
                                   FontSize="11" 
                                   Margin="4,4,0,0"
                                   Visibility="{Binding FirstNameErrorVisibility}"/>
                    </StackPanel>

                    <!-- Last Name -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Last Name" Style="{StaticResource FormLabel}"/>
                            <TextBlock Style="{StaticResource RequiredLabel}"/>
                        </StackPanel>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBox}"/>
                        <TextBlock Text="{Binding LastNameError}" 
                                   Foreground="{StaticResource AccentError}" 
                                   FontSize="11" 
                                   Margin="4,4,0,0"
                                   Visibility="{Binding LastNameErrorVisibility}"/>
                    </StackPanel>

                    <!-- Department -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Department" Style="{StaticResource FormLabel}"/>
                            <TextBlock Style="{StaticResource RequiredLabel}"/>
                        </StackPanel>
                        <ComboBox Text="{Binding Department}" 
                                  IsEditable="False"
                                  Style="{StaticResource ModernComboBox}">
                            <ComboBoxItem Content="IT"/>
                            <ComboBoxItem Content="HR"/>
                            <ComboBoxItem Content="Finance"/>
                            <ComboBoxItem Content="Marketing"/>
                            <ComboBoxItem Content="Sales"/>
                        </ComboBox>
                        <TextBlock Text="{Binding DepartmentError}" 
                                   Foreground="{StaticResource AccentError}" 
                                   FontSize="11" 
                                   Margin="4,4,0,0"
                                   Visibility="{Binding DepartmentErrorVisibility}"/>
                    </StackPanel>

                    <!-- Designation -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Designation" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding Designation, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Join Date -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Join Date" Style="{StaticResource FormLabel}"/>
                        <DatePicker SelectedDate="{Binding JoinDate}" 
                                    Style="{StaticResource ModernDatePicker}"/>
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Email" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBox}"/>
                        <TextBlock Text="{Binding EmailError}" 
                                   Foreground="{StaticResource AccentError}" 
                                   FontSize="11" 
                                   Margin="4,4,0,0"
                                   Visibility="{Binding EmailErrorVisibility}"/>
                    </StackPanel>

                    <!-- Phone -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Phone" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBox}"/>
                        <TextBlock Text="{Binding PhoneError}" 
                                   Foreground="{StaticResource AccentError}" 
                                   FontSize="11" 
                                   Margin="4,4,0,0"
                                   Visibility="{Binding PhoneErrorVisibility}"/>
                    </StackPanel>

                    <!-- Status -->
                    <StackPanel Margin="0,0,0,0">
                        <TextBlock Text="Status" Style="{StaticResource FormLabel}"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Active" 
                                         IsChecked="{Binding IsActive}" 
                                         GroupName="Status"
                                         Margin="0,0,24,0"
                                         VerticalContentAlignment="Center"/>
                            <RadioButton Content="Inactive" 
                                         IsChecked="{Binding IsInactive}" 
                                         GroupName="Status"
                                         VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" 
                Background="{StaticResource SecondaryBackground}" 
                Padding="24,14" 
                BorderThickness="0,1,0,0" 
                BorderBrush="{StaticResource SubtleBorder}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="💾 Save" 
                        Style="{StaticResource ModernButton}"
                        Width="120"
                        Margin="0,0,12,0"
                        Command="{Binding SaveCommand}"/>
                <Button Content="✖ Cancel" 
                        Style="{StaticResource CancelButton}"
                        Width="120"
                        Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>