                                                Header="Status">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="FontWeight" Value="SemiBold" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Present">
                                                                <Setter Property="Foreground" Value="{StaticResource AccentEmeraldBrush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Absent">
                                                                <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Half-day">
                                                                <Setter Property="Foreground" Value="{StaticResource AccentAmberBrush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>

                                <Border
                                    Margin="0,16,0,0"
                                    Padding="16,10"
                                    Background="{StaticResource SecondaryBackgroundBrush}"
                                    BorderBrush="{StaticResource SubtleBorderBrush}"
                                    BorderThickness="1.5"
                                    CornerRadius="6">
                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,20,0"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource SecondaryTextBrush}"
                                            Text="Legend: " />
                                        <Border
                                            Margin="0,0,12,0"
                                            Padding="8,4"
                                            Background="{StaticResource CardBackgroundBrush}"
                                            BorderBrush="{StaticResource AccentEmeraldBrush}"
                                            BorderThickness="1.5"
                                            CornerRadius="4">
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource AccentEmeraldBrush}"
                                                Text="✓ Present" />
                                        </Border>
                                        <Border
                                            Margin="0,0,12,0"
                                            Padding="8,4"
                                            Background="{StaticResource CardBackgroundBrush}"
                                            BorderBrush="{StaticResource AccentRedBrush}"
                                            BorderThickness="1.5"
                                            CornerRadius="4">
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource AccentRedBrush}"
                                                Text="✗ Absent" />
                                        </Border>
                                        <Border
                                            Padding="8,4"
                                            Background="{StaticResource CardBackgroundBrush}"
                                            BorderBrush="{StaticResource AccentAmberBrush}"
                                            BorderThickness="1.5"
                                            CornerRadius="4">
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource AccentAmberBrush}"
                                                Text="◐ Half-day" />
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!--  Enhanced Loading Overlay  -->
        <Border
            Grid.Row="1"
            Margin="28,0,28,28"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#E0000000"
            CornerRadius="8"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <Border
                Padding="48"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource CardBackgroundBrush}"
                CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="24"
                        Opacity="0.6"
                        ShadowDepth="0"
                        Color="Black" />
                </Border.Effect>
                <StackPanel>
                    <Border
                        Margin="0,0,0,20"
                        Padding="20"
                        HorizontalAlignment="Center"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        CornerRadius="8">
                        <TextBlock
                            FontSize="36"
                            Text="⏳" />
                    </Border>
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource PrimaryTextBrush}"
                        Text="Loading..." />
                    <TextBlock
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="{StaticResource SecondaryTextBrush}"
                        Text="Please wait while we fetch the data" />
                </StackPanel>
            </Border>
        </Border>

    </Grid>
</UserControl>